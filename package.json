{
  "name": "backrooms-terminal",
  "version": "1.0.0",
  "description": "A live backrooms terminal experience powered by AI entities",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "vite",
    "server:dev": "tsx watch server/index.ts",
    "build": "vite build",
    "start": "node dist/server/index.js",
    "build:server": "tsc -p tsconfig.server.json",
    "build:all": "npm run build && npm run build:server"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^4.18.2",
    "openai": "^4.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "vite": "^5.0.0",
    "typescript": "^5.3.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0"
  },
  "devDependencies": {
    "tsx": "^4.6.0",
    "concurrently": "^8.2.2"
  }
}
